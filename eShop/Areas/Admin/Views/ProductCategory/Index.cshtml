@model IEnumerable<eShop.Areas.Admin.ViewModels.ProductCategory.ListItemCategoryVM>

@{
	ViewData["Title"] = "Danh mục";
}

<h1 class="text-center">Danh mục</h1>

<a asp-controller="ProductCategory" asp-action="CreateOrUpdate" class="btn btn-primary mb-3">Thêm danh mục</a>

@if (TempData["Error"] != null)
{
	<div class="alert alert-danger alert-dismissible fade show" role="alert">
		<strong>@TempData["Error"]</strong>
		<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
}

<table class="table table-hover table-bordered">
	<thead class="table-dark">
		<tr>
			<th>Id</th>
			<th>Tên danh mục</th>
			<th>Ngày tạo</th>
			<th>Thao tác</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Id</td>
				<td>@item.Name</td>
				<td>@item.CreatedAt?.ToString("dd/MM/yyyy")</td>
				<td style="width: 1%; white-space: nowrap;">
					<a asp-action="CreateOrUpdate" asp-route-id="@item.Id" class="btn btn-success">Sửa</a>
					<a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Xác nhận xóa?')" class="btn btn-danger">Xóa</a>
				</td>
			</tr>
		}
	</tbody>
</table>